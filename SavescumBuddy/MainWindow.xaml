<Window x:Class="SavescumBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SavescumBuddy.Views"
        xmlns:viewmodels="clr-namespace:SavescumBuddy.ViewModels"
        mc:Ignorable="d"
        Height="700" Width="1160" ResizeMode="CanMinimize" Title="Savescum Buddy" 
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <viewmodels:ApplicationViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:MainViewModel}">
            <views:MainView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AboutViewModel}">
            <views:AboutView/>
        </DataTemplate>
    </Window.Resources>

    <ContentControl Content="{Binding CurrentViewModel, UpdateSourceTrigger=PropertyChanged}"/>
</Window>
