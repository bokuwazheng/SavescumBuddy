<UserControl x:Class="SavescumBuddy.Modules.Main.Views.Backups"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SavescumBuddy.Modules.Main.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:core="clr-namespace:SavescumBuddy.Core;assembly=SavescumBuddy.Core"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Content="go to settings" Command="{Binding GoToSettingsCommand}" />

        <!--Viewer-->
        <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.Viewer}" Grid.Column="0" Grid.RowSpan="3"/>

        <!--List-->
        <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.List}" Grid.Column="1" Grid.Row="0"/>

        <!--Pagination-->
        <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.Pagination}" Grid.Column="1" Grid.Row="0"/>

        <!--Filter-->
        <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.Filter}" Grid.Column="1" Grid.Row="0"/>

    </Grid>
</UserControl>
